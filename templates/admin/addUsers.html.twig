{% extends 'admin.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-uppercase">Ajouter un utilisateur</h2>
            </div>
        </div>

        <hr>

        <div class="card">
            <div class="card-body">
                {%if form is defined %}
                {{ form_start(form) }}

                {{form_errors(form)}}

                {{form_row(form.firstname,{ 'attr': {'class': 'form-control'} })}}
                {{form_row(form.lastname,{ 'attr': {'class': 'form-control'} })}}
                {{form_row(form.email,{ 'attr': {'class': 'form-control'} })}}
                {{form_row(form.password,{ 'attr': {'class': 'form-control form-height'} })}}
                {{form_row(form.image,{ 'attr': {'class': 'form-control file-upload-info'} })}}

                <hr>
                <button type="submit" class="btn btn-primary">Ajouter</button>
                {{form_end(form)}}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
