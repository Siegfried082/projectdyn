{% extends 'admin.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-uppercase">Liste des actualités</h2>
            </div>
            <div class="col-md-6">
                <a href="{{ path('acp_AddNews') }}" class="btn btn-dark float-right"><i class="ik ik-edit-2"></i>Ajouter une actualité</a>
            </div>

        </div>

        <hr>


        <div class="card">
            <div class="card-body">
                <table id="advanced_table" class="table">
                    <thead>
                    <tr>
                        <th class="nosort">#</th>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Date de publication</th>
                        <th>Description</th>
                        <th>Action</th>
                        <th></th>


                    </tr>
                    </thead>
                    <tbody>
                    {% for new in news %}
                        <tr>
                            <td>{{ new.id }}</td>
                            <td><img src="{{ asset('/img/news/'~ new.image) }}" class="table-user-thumb" alt="{{ new.image }}"></td>
                            <td>{{ new.name }}</td>
                            <td>{{ new.createdAt | date('d/m/Y à h:m') }}</td>
                            <td>{{ new.content | slice(0, 100) }}...</td>
                            <td>
                                <a href="{{ path('showNews', {id:new.id}) }}" class="btn btn-icon btn-success mb-1 text-light"><i class="ik ik-eye"></i></a>
                                <a href="{{ path('acp_EditNews', {id:new.id}) }}" class="btn btn-icon btn-warning mb-1 text-light"><i class="ik ik-edit"></i></a>
                                <a onclick="return confirm('Êtes-vous sûre de vouloir supprimer cette actualité ?')" href="{{ path('delNews', {id:new.id}) }}" class="btn btn-icon btn-danger mb-1 text-light"><i class="ik ik-trash-2"></i></a>
                            </td>
                            <td>{{ new.content }}</td>


                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
