{% extends 'admin.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-uppercase">Ajouter une notification</h2>
            </div>
        </div>

        <hr>

        <div class="card">
            <div class="card-body">
                {%if form is defined %}
                    {{ form_start(form) }}

                    {{form_errors(form)}}


                    {{form_row(form.user,{ 'attr': {'class': 'selectpicker', 'data-live-search': 'true'} })}}

                    {{form_row(form.text,{ 'attr': {'class': 'form-control'} })}}




                    <hr>
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                    {{form_end(form)}}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
